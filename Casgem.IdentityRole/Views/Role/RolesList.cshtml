@model List<Casgem.IdentityRole.DAL.AppRole>;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = null;
    int count = 0;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Rol Adı</th>
            <th>Rol Sil</th>
            <th>Rol Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>
                    @count
                </td>
                <td>@item.Name</td>
                <td><a class="btn btn-danger" href="/Role/DeleteRole/@item.Id">Rol Sil</a></td>
                <td><a class="btn btn-success" href="/Role/UpdateRole/@item.Id">Rol Güncelle</a></td>
            </tr>
        }
    </table>
    <a class="btn btn-primary" href="/Role/AddRole">Yeni Rol Girişi</a>
</div>