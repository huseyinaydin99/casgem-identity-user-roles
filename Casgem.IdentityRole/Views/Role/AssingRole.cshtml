*@
@{
    Layout = null;
}

<h2>Role Atama Sayfası</h2>

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<h2>Kullanıcı Rol Atama Sayfası</h2>
<div class="container">
    <form method="post">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="form-check">
                <input type="hidden" asp-for="@Model[i].RoleId">
                <input type="hidden" asp-for="@Model[i].RoleName">
                <input type="checkbox" asp-for="@Model[i].RoleExists" class="form-check-label">
                <label class="form-check-label" for="@Model[i].RoleExists">@Model[i].RoleName</label>
            </div>
        }
        <button class="btn btn-dark">Rolleri Güncelle</button>
    </form>
</div>